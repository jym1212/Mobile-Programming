<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:background="#FF6200EE"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMAGE VIEWER"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:text="Prev"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ratingBtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:text="Rating Bar"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:text="Next "
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="3">

        </GridView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="6">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rating : 0.0"
            android:textSize="30dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imageViewBtn"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_baseline_burst_mode_24"
            android:text="Image Viewer"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/photoshopBtn"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_brush_24"
            android:background="@drawable/button"
            android:text="Mini Photoshop"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>